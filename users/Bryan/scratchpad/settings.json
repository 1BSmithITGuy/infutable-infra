{
  // Auto-save “like Notepad++”
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,

  // Reopen your last editors exactly as you left them
  "window.restoreWindows": "all",
  "workbench.startupEditor": "none",

  // Keep unsaved tabs around (Hot Exit)
  "files.hotExit": "onExitAndWindowClose",

  // Make ad-hoc notes pleasant
  "editor.wordWrap": "on",
  "files.defaultLanguage": "markdown",

  // Markdown preview usability
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.breaks": true,
  
// Markdown Paste (telesoho)
//"markdown-paste.path": "${fileDirname}/_img",
"MarkdownPaste.path": "${fileDirname}/_img",
"MarkdownPaste.autoSelectClipboardType": "always",
"MarkdownPaste.imageRules": [

  

   {
    // for Markdown editor, when clipboard is an image, save under ./_img
    "when": "editorLangId == markdown && clipboardType == image",
    "path": "${fileDirname}/_img"
  }
]
}

